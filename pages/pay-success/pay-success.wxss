.success {
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  padding: 30rpx 30rpx;
}
.success image {
  width: 150rpx;
  height: 170rpx;
  margin-right: 30rpx;
  margin-top: 10rpx;
}
.success .info .title {
  color: #139EFF;
  font-size: 36rpx;
  margin-bottom: 20rpx;
}
.success .info .no {
  color: #999999;
  font-size: 30rpx;
}
.success .info .no text {
  color: #333;
}
.success .info .price {
  color: #999999;
  font-size: 30rpx;
}
.success .info .price text {
  color: #ff301d;
}
.save {
  width: 700rpx;
  margin: 0 auto;
  margin-top: 70rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 10rpx;
  background: #459bfe;
  color: #ffffff;
  font-weight: normal;
  padding: 0;
  text-align: center;
}
