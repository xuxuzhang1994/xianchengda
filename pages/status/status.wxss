page {
  min-height: 100vh;
  padding-bottom: 120rpx;
}
.status-list .bold {
  font-weight: bold;
}
.status-list .red {
  color: #ff301d !important;
}
.status-list .status-item {
  min-height: 80rpx;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  display: flex;
  padding: 0 20rpx;
}
.status-list .status-item .lable {
  font-size: 36rpx;
}
.status-list .status-item .val {
  color: #333333;
  font-size: 30rpx;
}
.qrcode {
  width: 100%;
  height: 450rpx;
  margin-top: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap;
}
.qrcode image {
  width: 400rpx;
  height: 400rpx;
}
.qrcode view {
  width: 100%;
  font-size: 26rpx;
  text-align: center;
}
.tip {
  color: #ff301d;
  font-size: 30rpx;
  padding: 0 15rpx;
  display: block;
  line-height: 45rpx;
}
.mask {
  min-height: 100vh;
  position: fixed;
  top: 0;
  left: 0;
  bottom: 0;
  right: 0;
  background-color: #fff;
  background: url("https://baoming.goboosoft.com/uploads/images/shuiyin.png") repeat center;
  background-size: 280rpx;
  z-index: 2;
}
