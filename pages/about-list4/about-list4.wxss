.list .item {
    display: flex;
    margin-top: 10rpx;
    background: #ffffff;
    padding: 15rpx 10rpx;
  }
  .list .item .logo {
    margin-right: 20rpx;
    height: 170rpx;
    width: 240rpx;
    flex-shrink: 0;
    display: -webkit-box;
    box-sizing: border-box;
  }
  .list .item .info {
    height: 120rpx;
    flex-grow: 1;
  }
  .list .item .info .title {
    font-weight: bold;
    font-size: 30rpx;
    margin-bottom: 10rpx;
  }
  .list .item .info .disc {
    color: #999;
    font-size: 26rpx;
    flex-grow: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    word-break: break-all;
  }
  