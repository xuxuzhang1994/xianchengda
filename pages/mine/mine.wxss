page {
  background: #ffffff;
}
.header {
  height: 300rpx;
  width: 100%;
  position: relative;
  padding-top: 100rpx;
}
.header .bg-img {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.header .user-info {
  position: relative;
  z-index: 2;
  display: flex;
  padding-left: 40rpx;
  align-items: center;
}
.header .user-info .logo {
  width: 100rpx;
  height: 100rpx;
  border-radius: 100%;
  margin-right: 20rpx;
}
.header .user-info .name {
  color: #ffffff;
  font-size: 32rpx;
}
.tab-list {
  transform: translateY(-40rpx);
  background: #ffffff;
  border-radius: 50rpx 50rpx 0 0;
  padding-top: 20rpx;
}
.tab-list .item {
  display: flex;
  align-items: center;
  position: relative;
  height: 120rpx;
  border-bottom: 1px solid #eeeeee;
  color: #828282;
  padding: 0 30rpx;
}
.tab-list .item .logo {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}
.tab-list .item .icon-right {
  position: absolute;
  right: 20rpx;
  width: 40rpx;
  height: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}
.tab-list .red {
  position: relative;
}
.tab-list .red:before {
  content: '';
  width: 20rpx;
  height: 20rpx;
  background: red;
  border-radius: 100%;
  position: absolute;
  right: 60rpx;
  top: 50%;
  transform: translateY(-50%);
}
