.home #myVideo {
  width: 100%;
  height: 350rpx;
  display: -webkit-box;
}
.home .slogn {
  background: #ffffff;
  width: 100%;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
  margin-bottom: 15rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.home .slogn image {
  height: 50rpx;
}
.home .info {
  padding: 0 20rpx;
  background: #ffffff;
}
.home .info .title {
  position: relative;
  height: 90rpx;
  display: flex;
  align-items: center;
  color: #fff;
  justify-content: center;
  z-index: 2;
  padding: 10rpx 0;
}
.home .info .title text {
  position: relative;
}
.home .info .title .bg-img {
  position: absolute;
  height: 70rpx;
  width: 100%;
  top: 10rpx;
  left: 0;
}
.home .info .detail {
  display: flex;
  border-top: 1px solid #eee;
  padding: 20rpx 0;
}
.home .info .detail .logo {
  max-width: 330rpx;
  min-width: 330rpx;
  height: 230rpx;
  margin-right: 15rpx;
}
.home .info .detail .text-info {
  position: relative;
}
.home .info .detail .text-info .text {
  position: relative;
  overflow: hidden;
  height: 240rpx;
  line-height: 40rpx;
  word-break: break-all;
  font-size: 28rpx;
  text-indent: 2em;
}
.home .info .detail .text-info .text:after {
  content: "... >>";
  color: #459bfe;
  position: absolute;
  right: 0rpx;
  bottom: 0;
  display: inline-block;
  width: 200rpx;
  text-align: right;
  padding-right: 20rpx;
  background: linear-gradient(to right, rgba(255, 255, 255, 0.55), #fff 55%);
}
.home .info .detail .text-info .more {
  position: absolute;
  background: #459bfe;
  color: #ffffff;
  left: 50%;
  transform: translateX(-50%);
  bottom: 0;
  border-radius: 10rpx;
  padding: 2rpx 10rpx;
  font-size: 26rpx;
}
.home .type-list {
  background: #ffffff;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 15rpx;
  margin-top: 20rpx;
}
.home .type-list .type-item {
  width: 355rpx;
  position: relative;
  height: 171rpx;
  padding-left: 20rpx;
  padding-top: 25rpx;
}
.home .type-list .type-item:nth-child(1) {
  margin-bottom: 20rpx;
}
.home .type-list .type-item .bg-img {
  width: 355rpx;
  height: 171rpx;
  display: -webkit-box;
  position: absolute;
  top: 0;
  left: 0;
}
.home .type-list .type-item .name-cn {
  font-weight: bold;
  font-size: 30rpx;
  position: relative;
}
.home .type-list .type-item .name-en {
  color: #999999;
  font-size: 24rpx;
  position: relative;
  word-break: break-all;
  line-height: 1.1;
  display: inline-block;
}
.home .type-list .type-item .more1 {
  font-size: 24rpx;
