/**app.wxss**/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}
page{
  box-sizing: border-box;
  font-size: 32rpx;
  background: #eeeeee;
  color: #333;
}
view{
  box-sizing: border-box;
}

button {
  font-size: 28rpx;
  background-color: transparent;
  border: none;
  padding: 0;
  margin: 0 !important;
  line-height: 1;
  min-height: 0 !important;
  width: auto !important;
}
button:not{
  margin: 0;
  padding: 0;
}

input {
  outline: none;
  border: none;
  list-style: none;
}

button::after {
  border: none;
}

.no-default{
  text-align: center;
  color: #999999;
  margin-top: 40rpx;
}
